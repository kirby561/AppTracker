<Window x:Class="AppTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTracker"
        mc:Ignorable="d"
        Loaded="OnWindowLoaded"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListView SizeChanged="OnProcessListViewSizeChanged" Margin="10" Name="_processListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Process" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Time (Hours)" Width="50" DisplayMemberBinding="{Binding Time}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
